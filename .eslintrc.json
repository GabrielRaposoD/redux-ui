{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "react/prop-types": "off",
    "rules": {
      "react/react-in-jsx-scope": "off",
      "jsx-a11y/anchor-is-valid": [
          "error",
          {
              "components": ["Link"],
              "specialLink": ["hrefLeft", "hrefRight"],
              "aspects": ["invalidHref", "preferButton"]
          }
      ]
  }
  }
}
